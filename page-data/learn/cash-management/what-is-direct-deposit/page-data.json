-10-03T15:53:35.476Z","updatedAt":"2020-03-02T12:03:35.338Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":5,"contentType":{"sys":{"type":"Link","linkType":"ContentType","id":"articleHeader"}},"locale":"en-US"},"fields":{"category":"cash-management","thumbnailImage":{"sys":{"space":{"sys":{"type":"Link","linkType":"Space","id":"lrdkz6qgi9tt"}},"id":"2DIEVLxKBe7ZBdTXIMfrB","type":"Asset","createdAt":"2019-10-02T16:23:10.347Z","updatedAt":"2019-10-02T16:23:10.347Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":1,"locale":"en-US"},"fields":{"title":"Thumbnail-wire-transfer","file":{"url":"//images.ctfassets.net/lrdkz6qgi9tt/2DIEVLxKBe7ZBdTXIMfrB/3598e05fc34216cb97ccd1c8825cadd2/Thumbnail-wire-transfer.png","details":{"size":20169,"image":{"width":273,"height":273}},"fileName":"Thumbnail-wire-transfer.png","contentType":"image/png"}}},"urlPath":"wire-transfers-required-information","title":"What information is needed for a wire transfer?"}}]}}],"urlPath":"what-is-direct-deposit","category":"cash-management","thumbnailImage":{"sys":{"space":{"sys":{"type":"Link","linkType":"Space","id":"lrdkz6qgi9tt"}},"id":"1Vl8IRID5LaOkkOl2KejTp","type":"Asset","createdAt":"2019-10-21T23:10:48.966Z","updatedAt":"2019-10-21T23:10:48.966Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":1,"locale":"en-US"},"fields":{"title":"Thumbnail-direct-deposit","file":{"url":"//images.ctfassets.net/lrdkz6qgi9tt/1Vl8IRID5LaOkkOl2KejTp/521261b3040ad4f92447d016ac868c39/Thumbnail-direct-deposit.png","details":{"size":18577,"image":{"width":273,"height":273}},"fileName":"Thumbnail-direct-deposit.png","contentType":"image/png"}}}}}}}