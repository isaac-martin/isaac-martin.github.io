?"}},{"sys":{"space":{"sys":{"type":"Link","linkType":"Space","id":"lrdkz6qgi9tt"}},"id":"4AjLascqr87sATk1GYNbaQ","type":"Entry","createdAt":"2019-10-03T15:53:36.109Z","updatedAt":"2019-10-09T08:41:30.579Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":4,"contentType":{"sys":{"type":"Link","linkType":"ContentType","id":"articleHeader"}},"locale":"en-US"},"fields":{"category":"cash-management","thumbnailImage":{"sys":{"space":{"sys":{"type":"Link","linkType":"Space","id":"lrdkz6qgi9tt"}},"id":"5I3v5ovT76afWx6HpLSJwD","type":"Asset","createdAt":"2019-10-02T16:50:49.062Z","updatedAt":"2019-10-02T16:50:49.062Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":1,"locale":"en-US"},"fields":{"title":"Thumbnail-what-is-wire-transfer","file":{"url":"//images.ctfassets.net/lrdkz6qgi9tt/5I3v5ovT76afWx6HpLSJwD/39c9024005fb15de47f550eecba1915c/Thumbnail-what-is-wire-transfer.png","details":{"size":18232,"image":{"width":273,"height":273}},"fileName":"Thumbnail-what-is-wire-transfer.png","contentType":"image/png"}}},"urlPath":"what-is-wire-transfer","title":"What is a wire transfer?"}}]}}],"urlPath":"paying-by-invoice-advantages","category":"cash-management","thumbnailImage":{"sys":{"space":{"sys":{"type":"Link","linkType":"Space","id":"lrdkz6qgi9tt"}},"id":"2z62sYWbnYcnWmkyGWO3Yj","type":"Asset","createdAt":"2019-10-02T16:17:29.255Z","updatedAt":"2019-10-02T16:17:29.255Z","environment":{"sys":{"id":"master","type":"Link","linkType":"Environment"}},"revision":1,"locale":"en-US"},"fields":{"title":"Thumbnail-online-invoicing","file":{"url":"//images.ctfassets.net/lrdkz6qgi9tt/2z62sYWbnYcnWmkyGWO3Yj/01ecf25f553322eb25b951b81e56ce8b/Thumbnail-online-invoicing.png","details":{"size":20535,"image":{"width":273,"height":273}},"fileName":"Thumbnail-online-invoicing.png","contentType":"image/png"}}}}}}}